2023_ib153i-12_a/src/views/index.ejs<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <title>Urbán Csilla - Főoldal</title>
      <link rel = "icon" type = "image/x-icon" href = "favicon.ico?">
      <link href="/css/style.css" rel="stylesheet" type="text/css">
      <link href="/css/menu.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <header>
      <img src="assets/img/logo.png" alt="Logo" class="navbar-logo user-select-none">
      <nav class="navbar">
        <a href = "/" class = "navbar-item active">Főoldal</a>
        <a href = "/article" class = "navbar-item">Felmérések</a>
        <a href="<%= current_role ? '/lessons' : '/register' %>" class="navbar-item">
        <%= 'Leckék' %>
        </a>
        <a href="<%= current_role ? '/booking' : '/register' %>" class="navbar-item">
        <%= 'Időpontfoglalás' %>
        </a>
             <div class = "navbar-item dropdown profileIcon right-side">
                <img class = "right-side" src = "assets/img/profile_icon.png" alt = "Profil ikon">
                <div class = "dropdown-content">
                  <% if (!current_role) { %>
                    <a href="/login" class="navbar-item">Bejelentkezés</a>
                    <a href="/register" class="navbar-item">Regisztráció</a>
                  <% } else if (current_role === 'ROLE_USER') { %>
                    <a href="/" class="navbar-item">Profil</a>
                  <% } else if (current_role === 'ROLE_ADMIN') { %>
                    <a href="/admin" class="navbar-item">Admin</a>
                  <% } %>
                  <% if (current_role) { %>
                    <a href="/logout" class="navbar-item">Kijelentkezés</a>
                  <% } %>
                </div>
             </div>
      </nav>
      <img src="assets/img/plant2.png" alt="Hanging plant" class="plant user-select-none">
    </header>
      <main>
      <div class="profile-container">

                <div class="profile-edit">
                    <h3>Felhasználó Adatainak Változtatása</h3>
                    <form action="/" method="post">
                      <label for="current-password">Felhasználó ID:</label>
                        <input type="id" id="user-id" name="user-id" required>
                        <label for="username">Név:</label>
                        <input type="text" id="username" name="username" placeholder="Név">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Email-cím">
                        <button id="profilebutton" type="submit">Mentés</button>
                    </form>
                    <h3>Felhasználó Jelszavának Változtatása</h3>
                    <form id="password-form" action="/" method="post">
                      <label for="current-password">Felhasználó ID:</label>
                        <input type="id" id="user-id" name="user-id" required>

                        <label for="new-password">Új jelszó:</label>
                        <input type="password" id="new-password" name="new-password" required>

                        <label for="confirm-password">Jelszó megerősítése:</label>
                        <input type="password" id="confirm-password" name="confirm-password" required>

                        <button type="submit">Jelszó változtatása</button>

                        <h3>Felhasználó Törlése</h3>
                    <form id="password-form" action="/" method="post">
                      <label for="current-password">Felhasználó ID:</label>
                        <input type="id" id="user-id" name="user-id" required>

                        <button type="submit">Felhasználó Törlése</button>
                    </form>

                </div>
            </div>
    </main>
      <footer>
         <div>
             <h1>Elérhetőségem</h1>
             <ul>
                 <li class = "bold">
                     E-mail:
                 <li>
                     csilla@gmail.com
                 </li>
                 <li class = "bold">
                     Személyesen:
                 <li>
                     Időpont foglalással tudsz jelentkezni, várlak szeretettel.
                 </li>
             </ul>
         </div>
     </footer>
      <% if (current_role === 'ROLE_ADMIN') { %>
      <div></div>
      This content is only shown to administrators.
      </div>
      <% } %>
      <% if (current_role === 'ROLE_USER') { %>
      <div>
         This content is only shown to users.
      </div>
      <% } %>
      <% if (current_role ) { %>
      <div>     
         This content is only shown to authenticated users.</br>
         Logged in user: <span><%= current_email %></span> |
         Roles: <span ><%= current_role %></span>          
      </div>
      <% } %>
   </body>
</html>